            android:layout_marginLeft="70dp"
            android:paddingTop="30dp"
            android:layout_alignTop="@+id/store_lwtd"
            android:layout_toRightOf="@+id/store_lwtd"
            />


        </RelativeLayout>

    <RelativeLayout
