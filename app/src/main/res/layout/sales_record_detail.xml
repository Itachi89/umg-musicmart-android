<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >


    <RelativeLayout
        android:background="#ff1d77ae"
        android:layout_width="match_parent"
        android:layout_height="65dp">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/detail_image"
            android:src="@drawable/bug"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Songs"
            android:textSize="14dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            android:id="@+id/detail_Title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/detail_image"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Artists"
            android:textSize="14dp"
            android:paddingBottom="10dp"
            android:textColor="#000"
            android:id="@+id/detail_ArtistId"
            android:layout_alignBottom="@+id/detail_image"
            android:layout_toRightOf="@+id/detail_image" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="band :"
            android:textColor="#7C7B7B"
            android:id="@+id/detail_band"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="label :"
            android:textColor="#7C7B7B"
            android:id="@+id/detail_label"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/detail_play"
            android:src="@drawable/play_icon"
            android:layout_alignParentRight="true"
            android:longClickable="false"
            android:adjustViewBounds="true"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:minHeight="45dp"
            android:minWidth="45dp"
            android:maxHeight="45dp"
            android:maxWidth="45dp"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/detail_pause"
            android:src="@drawable/pause_icon"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:longClickable="false"
            android:adjustViewBounds="true"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:minHeight="45dp"
            android:minWidth="45dp"
            android:maxHeight="45dp"
            android:maxWidth="45dp"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailSongs"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="@color/list_background"/>


</LinearLayout>