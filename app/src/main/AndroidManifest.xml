<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.preludesys.umg.musicmart" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/umg"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme"
        android:name="com.preludesys.umg.musicmart.MusicMartApplication">
        <activity
            android:name=".userinterface.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".userinterface.activity.SalesRecordListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".userinterface.activity.SalesRecordDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".userinterface.activity.StoreDetailActivity"
         android:theme="@style/MyTheme"
            android:screenOrientation="portrait"></activity>


    </application>

</manifest>
